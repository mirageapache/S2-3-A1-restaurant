<h1 class="mb-1 restaurant-show-title">{{data.name}} <br> ({{data.name_en}})</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{data.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{data.location}}
        <a href="{{data.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{data.phone}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-star pr-2"></i>
          評價：
        </span>
        {{data.rating}}
      </p>

      <p class="mb-5">
        {{data.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{data.image}}" alt="{{data.name}}"
        style="max-width: 600px;">
    </div>
  </div>
  <div class="delete_div row">
    <button class="delete_btn btn btn-danger" data-id="{{ data._id }}">刪除餐廳資料</button>
  </div>
</div>


<script>
  const delete_btn = document.querySelector('.delete_btn')
  delete_btn.addEventListener('click', (e) => {
    let action = confirm('確定要刪除餐廳資料嗎?')
    let id = e.target.dataset.id
    if (action) { window.location.replace(`/restaurants/${id}/delete`) }
  })
</script>
